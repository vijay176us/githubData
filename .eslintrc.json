// 20241223151352
// https://raw.githubusercontent.com/academind/github-actions-course-resources/refs/heads/main/Code/02%20Basics/04%20Practice%20Project%20(Start)/.eslintrc.json

{
    "root": true,
    "env": {
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "plugin:react/recommended",
      "plugin:react/jsx-runtime"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "semi": [
        2,
        "always"
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }